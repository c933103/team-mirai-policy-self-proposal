{
  "description": "Claude Code allowed commands list - These commands can be executed without user confirmation",
  "version": "1.0.0",
  "allowed_commands": {
    "file_operations": [
      "ls",
      "cat",
      "head",
      "tail",
      "grep",
      "rg",
      "find",
      "wc",
      "file",
      "stat",
      "du",
      "df",
      "pwd",
      "cd",
      "tree",
      "realpath",
      "basename",
      "dirname"
    ],
    "git_operations": [
      "git status",
      "git diff",
      "git log",
      "git branch",
      "git remote",
      "git show",
      "git stash list",
      "git tag",
      "git describe",
      "git config --list",
      "git rev-parse",
      "git ls-files",
      "git blame"
    ],
    "development_tools": [
      "npm list",
      "npm run",
      "npm test",
      "yarn list",
      "yarn run",
      "yarn test",
      "python --version",
      "node --version",
      "npm --version",
      "yarn --version",
      "pip list",
      "bundle list",
      "go version",
      "cargo --version",
      "rustc --version",
      "java -version",
      "mvn --version",
      "gradle --version",
      "docker --version",
      "docker-compose --version"
    ],
    "analysis_tools": [
      "eslint",
      "prettier",
      "tslint",
      "pylint",
      "flake8",
      "black",
      "ruff",
      "mypy",
      "rubocop",
      "golint",
      "gofmt",
      "rustfmt",
      "cargo clippy"
    ],
    "system_info": [
      "uname",
      "hostname",
      "whoami",
      "date",
      "uptime",
      "which",
      "whereis",
      "type",
      "env",
      "printenv",
      "locale",
      "ps",
      "top -l 1",
      "jobs",
      "history"
    ],
    "text_processing": [
      "echo",
      "printf",
      "sed",
      "awk",
      "cut",
      "sort",
      "uniq",
      "tr",
      "paste",
      "join",
      "diff",
      "comm",
      "cmp",
      "md5sum",
      "sha256sum",
      "base64"
    ],
    "network_tools": [
      "curl -I",
      "wget --spider",
      "ping -c 1",
      "nslookup",
      "dig",
      "host",
      "ifconfig",
      "ip addr"
    ],
    "github_cli": [
      "gh pr list",
      "gh pr view",
      "gh pr status",
      "gh issue list",
      "gh issue view",
      "gh repo view",
      "gh workflow list",
      "gh run list",
      "gh run view",
      "gh api"
    ]
  },
  "patterns": {
    "description": "Regex patterns for commands that are always allowed",
    "allowed_patterns": [
      "^echo\\s+",
      "^printf\\s+",
      "^test\\s+",
      "^\\[\\[.*\\]\\]$",
      "^\\[.*\\]$",
      "^true$",
      "^false$",
      "^sleep\\s+\\d+$",
      "^wait$",
      "^exit\\s+\\d+$"
    ]
  },
  "dangerous_commands": {
    "description": "Commands that should always require user confirmation",
    "require_confirmation": [
      "rm",
      "mv",
      "cp",
      "chmod",
      "chown",
      "chgrp",
      "ln",
      "mkdir",
      "touch",
      "truncate",
      "dd",
      "mkfs",
      "fdisk",
      "parted",
      "mount",
      "umount",
      "kill",
      "killall",
      "pkill",
      "systemctl",
      "service",
      "reboot",
      "shutdown",
      "poweroff",
      "git push",
      "git pull",
      "git merge",
      "git rebase",
      "git reset",
      "git clean",
      "git checkout",
      "git commit",
      "git add",
      "git rm",
      "npm install",
      "npm uninstall",
      "npm update",
      "npm publish",
      "yarn add",
      "yarn remove",
      "yarn upgrade",
      "pip install",
      "pip uninstall",
      "apt",
      "apt-get",
      "yum",
      "dnf",
      "brew",
      "pacman",
      "zypper",
      "snap",
      "flatpak",
      "docker run",
      "docker exec",
      "docker stop",
      "docker rm",
      "docker rmi",
      "docker-compose up",
      "docker-compose down",
      "kubectl apply",
      "kubectl delete",
      "kubectl create",
      "terraform apply",
      "terraform destroy",
      "aws",
      "gcloud",
      "az"
    ]
  },
  "environment_variables": {
    "description": "Environment variables that affect command execution",
    "safe_to_read": [
      "PATH",
      "HOME",
      "USER",
      "SHELL",
      "LANG",
      "LC_ALL",
      "PWD",
      "OLDPWD",
      "EDITOR",
      "VISUAL",
      "TERM",
      "NODE_ENV",
      "PYTHON_PATH"
    ],
    "never_modify": [
      "PATH",
      "LD_LIBRARY_PATH",
      "DYLD_LIBRARY_PATH",
      "HOME",
      "USER",
      "SHELL"
    ]
  }
}